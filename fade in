// .popup이 보이지 않도록
$('.popup').hide();

// .on 클릭하면 .popup 서서히 나타나도록(실행시간은 0.5초)
$('.on').click(function () {
  $('.popup').fadeIn(500);
});

// .off 클릭하면 .popup 서서히 사라지도록(실행시간은 0.5초)
$('.off').click(function () {
  $('.popup').fadeOut(500);
});

// .toggle 클릭하면 .popup이 on/off를 반복하도록(실행시간은 0.5초)
$('.toggle').click(function () {
  $('.popup').fadeToggle(500);
});

// .close 클릭하면 off와 동일(실행시간은 0.5초)
$('.close').click(function () {
  $('.popup').fadeOut(500);
});
